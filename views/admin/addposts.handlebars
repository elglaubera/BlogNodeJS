{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
  {{else}}

{{/each}}

<div class="card">
  <div class="card-body">
    <h3>New post: </h3>
    <br>
    <form action="/admin/posts/new" method="POST">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" class="form-control">
      <label for="slug">Slug</label>
      <input type="text" name="slug" id="slug" class="form-control">
      <label for="description">Description</label>
      <input type="text" name="description" id="description" class="form-control">
      <label for="contents">Contents</label>
      <textarea name="contents" id="contents" class="form-control"></textarea>
      <label for="category">Category</label>
      <select class="custom-select" name="category" id="category">
        {{#each categories}}
          <option value="{{_id}}">{{name}}</option>
          {{else}}
          <option value="0">No categories registered</option>
        {{/each}}
      </select>
      <button type="submit" class="btn btn-success mt-4">Create post</button>
    </form>
  </div>
</div>
