<h2>Posts list:</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">New post</button></a>
{{#each posts}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{this.title}}</h4>
      <p>Description: {{this.description}}</p>
      <p>Contents: <br>{{this.contents}}</p>
      <small>Date: {{this.date}}</small>
      <br>
      <small>Category: {{this.category.name}}</small>
      <br>
      <a href="/admin/posts/edit/{{_id}}">
        <button class="btn btn-success mt-4">Edit post</button>
      </a>
      <form action="/admin/posts/delete" method="POST">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-danger mt-2">Delete post</button>
      </form>
      <!-- Other method of delete
        <a href="/admin/posts/delete/{{_id}}">
          <button class="btn btn-success mt-4">Delete post</button>
        </a>
      -->
    </div>
  </div>
{{else}}
  <p>No categories registered</p>
{{/each}}
