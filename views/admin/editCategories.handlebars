{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<h3>Edit Category: {{category.name}}</h3>
<div class="card">
  <div class="card-body">
    <form action="/admin/categories/edit" method="POST">
      <input type="hidden" name="id" value="{{category._id}}">
      <label for="name">Name: </label>
      <input type="text" name="name" id="name" placeholder="Name of category" class="form-control" value="{{category.name}}">
      <label for="slug">Slug: </label>
      <input type="text" name="slug" id="slug" placeholder="Slug of category" class="form-control" value="{{category.slug}}">
      <br>
      <button type="submit" class="btn btn-success">Edit category</button>
    </form>
  </div>
</div>
